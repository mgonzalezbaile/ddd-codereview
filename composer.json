{
  "name": "mgonzalezbaile/ddd-codereview",
  "description": "Example of an app developed under DDD principles",
  "license": "MIT",
  "require": {
    "php": "^7.2",
    "ramsey/uuid": "^3.7",
    "psr/container": "^1.0",
    "psr/http-message": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "CodeReview\\": "CodeReview/src/",
      "Common\\": "Common/src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.2",
    "symfony/options-resolver": "^4.1",
    "friendsofphp/php-cs-fixer": "^2.12"
  },
  "autoload-dev": {
    "psr-4": {
      "CodeReviewTest\\": "CodeReview/tests/",
      "CommonTest\\": "CommonTest/tests/"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "preferred-install": "dist"
  }
}
